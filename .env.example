# -----------------------------------------------------------------------------
# PROJECT: CODE QUEST PYTHON - ENVIRONMENT CONFIGURATION
# -----------------------------------------------------------------------------
# Copy this file to .env and fill in values for your environment.
# See ENV_SPECIFICATION.md for detailed descriptions of each variable.
# -----------------------------------------------------------------------------

# --- 1. DATABASE CONFIGURATION (PRISMA/SQLMODEL) ---
# For SQLite (Local Dev - zero config):
DATABASE_URL="file:./dev.db"

# For PostgreSQL (Production):
# DATABASE_URL="postgresql://user:password@localhost:5432/codequest?schema=public"

# For MySQL:
# DATABASE_URL="mysql://user:password@localhost:3306/codequest"


# --- 2. AUTHENTICATION (NEXTAUTH.JS) ---
# Generate a secret via: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"


# --- 3. AUTH PROVIDERS (FEATURE FLAGS) ---
ENABLE_CREDENTIALS_AUTH=true
ENABLE_GUEST_MODE=true

# GitHub OAuth (Optional - set both to enable)
# GITHUB_ID=""
# GITHUB_SECRET=""

# Google OAuth (Optional - set both to enable)
# GOOGLE_ID=""
# GOOGLE_SECRET=""


# --- 4. API CONNECTIVITY ---
BACKEND_API_URL="http://localhost:8000/api/v1"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Shared secret for Next.js â†’ FastAPI inter-service auth
# Generate via: openssl rand -hex 32
INTERNAL_API_KEY="your-internal-api-key-here"


# --- 5. FEATURE FLAGS & GAME SETTINGS ---
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_XP_MULTIPLIER=1
NEXT_PUBLIC_MAINTENANCE_MODE=false


# --- 6. BACKEND SPECIFIC (FASTAPI) ---
BACKEND_SECRET_KEY="another-different-secret-key"
CORS_ORIGINS="http://localhost:3000,https://yourdomain.com"


# --- 7. OPTIONAL SERVICES (SMTP FOR MAGIC LINKS) ---
# SMTP_HOST="smtp.mailtrap.io"
# SMTP_PORT=2525
# SMTP_USER=""
# SMTP_PASS=""
